@page "/index"

@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@attribute [Authorize]

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.
<AuthorizeView>
	<Authorized>
		<p>Hello, @context.User.Identity!.Name!</p>
		<p>
			<a href="Identity/Account/Manage">Manage your account</a>
		</p>
	</Authorized>
	<NotAuthorized>
		<p>
			<a href="Identity/Account/Login">Log in</a> to see your personalized content.
		</p>
	</NotAuthorized>
</AuthorizeView>
